<!DOCTYPE html>
<html>
<head>
  <title>Waynesgarden</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<div id="wrap">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Wayne\'s Garden', root_path, class: 'navbar-brand' %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      
        <ul class="nav navbar-nav navbar-right">
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Here's what's growing <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Flowers', flowers_path %></li>
              <li><%= link_to 'Peppers', peppers_path %></li>
              <li><%= link_to 'Tomatoes', tomatoes_path %></li>
              <li><%= link_to 'Herbs', herbs_path %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</div>
<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
  <%= yield %>


<br class="clr" />

<div id="footer">
    <div class="container">
      <div class="col-xs-12 col-sm-3 social">
        <b>Site developed by Wil Santana</b>
        <br />
        <%= link_to 'https://www.facebook.com/wil.santana' do %>
        <%= image_tag 'fb.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://github.com/fredosantana' do %>
        <%= image_tag 'gh.png', class: 'social-button' %>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>
